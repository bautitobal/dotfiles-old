            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº ",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "~/dotfiles/scripts/power-menu.sh"
    },
    "custom/launcher": {
        "format": "Û∞£á",
        /* Arch: Û∞£á , Linux Mint: Û∞£≠ , Fedora: Óüô, Kali: Ôåß ,
    Manjaro: Ôåí , NixOS: Û±ÑÖ, openSUSE: Ó°ó, Pop!_OS: Ôå™,
    Debian: ÓùΩ , Gentoo: Óü¶ , FreeBSD: Ôäè , Ubuntu: Ôåõ ,
    Void Linux: ÔåÆ , Slackware: Ôåò , Alpine: ÔåÄ , Solus: Ôå≠  */
        "exec": "awk -F= '/^PRETTY_NAME/{print $2}' /etc/os-release | tr -d '\"'",
        "tooltip": true,
        "on-click": "rofi -show drun"
    },
    "custom/language": {
        "format": "{}",
        "exec": "~/dotfiles/scripts/hypr-language.sh",
        "interval": 1,
        "return-type": "json",
        "tooltip": true,
        "on-click": "hyprctl switchxkblayout all next"
    },
    "custom/storage": {
        "format": "{}",
        "exec": "~/dotfiles/scripts/disk-usage.sh",
        "interval": 3,
        "tooltip": false
    },
    "custom/memorydisk": {
        "exec": "~/dotfiles/scripts/memory-disk.sh",
        "interval": 3,
        "return-type": "json",
        "tooltip": true,
        "on-click": "~/dotfiles/scripts/memory-disk.sh toggle"
    }
}


