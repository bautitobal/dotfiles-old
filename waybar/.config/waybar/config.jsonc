      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ ",
        "format-ethernet": "ÓΩÑ ",
        "tooltip-format": "{ifname} via {gwaddr} ÓΩÑ ",
