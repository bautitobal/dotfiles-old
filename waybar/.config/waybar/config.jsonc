        "custom/media",
        "mpd"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "pulseaudio",
        "network",
        /*"power-profiles-daemon",*/
        "cpu",
        "custom/memorydisk",
        "custom/language",
        "clock",
        "custom/power",
        "custom/spacer"
