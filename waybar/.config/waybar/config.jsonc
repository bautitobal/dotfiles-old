    "hyprland/workspaces": {
        "format": "{icon}",
        "sort-by-number": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "on-click": "hyprctl dispatch workspace {name}",
        "format-icons": {
            "active": "Û∞ÆØ",
            "urgent": "Û∞ëä",
            "default": "Û∞ä†",
